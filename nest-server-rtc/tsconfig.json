{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowJs": true,
    "incremental": false,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@config/*": ["config/*"],
      "@constants/*": ["constants/*"],
      "@core/*": ["core/*"],
      "@guards/*": ["guards/*"],
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@entities/*": ["database/models/*"],
      "@repositories/*": ["http/repositories/*"],
      "@dto/*": ["http/dto/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "package.json",
    "src/http/modules/admin/admin/.service.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
